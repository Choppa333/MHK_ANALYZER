; Configuration file for MGK Analyzer Setup
; Version: 1.0.0
; Target: .NET 8 Windows 64-bit

[Application]
Name=MGK Analyzer
Version=1.0.0
Manufacturer=MGK Analyzer
Description=3D Efficiency Surface Visualization Tool
Architecture=x64

[Installation]
DefaultInstallPath=C:\Program Files\MGK Analyzer
CreateStartMenuShortcuts=true
CreateDesktopShortcuts=true
InstallScope=perMachine

[Requirements]
WindowsVersion=7
DotNetVersion=8.0
MinimumDiskSpace=512MB
Processor=x64

[Components]
IncludeApplication=true
IncludeSyncfusion=true
IncludeOxyPlot=true
IncludeEPPlus=true

[Branding]
UseCustomLicense=true
LicenseFile=License.rtf
UseCustomBanners=false

[Build]
OutputFormat=MSI
CompressionMethod=LZMA
EmbedCabinet=true
Platform=x64
Configuration=Release

[Installer Features]
AllowCustomInstallDir=true
AllowChangeInstallPath=true
RequireAdminPrivileges=true
AutoDetectDotNet=true
CheckRegistryForExisting=true
AllowRepairMode=true
AllowUninstall=true

[Shortcuts]
CreateUninstallShortcut=true
CreateApplicationMenuItem=true
RemoveShortcutsOnUninstall=true

[Registry]
EnableRegistryEntries=true
RegistryHive=HKEY_LOCAL_MACHINE
RegistryPath=Software\MGK Analyzer\MGK_Analyzer

[Dependencies]
; .NET 8 Desktop Runtime (self-contained, bundled)
; Syncfusion components (bundled)
; OxyPlot (bundled)
; EPPlus (bundled)

; Last Updated: 2025

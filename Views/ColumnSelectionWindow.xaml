<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="MGK_Analyzer.Views.ColumnSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Y-axis Column Selection"
        Height="480"
        Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="차트에 표시할 Y축 컬럼을 선택하세요"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1"
                CornerRadius="4"
                Background="WhiteSmoke">
            <ListView ItemsSource="{Binding Options}"
                      Padding="4"
                      BorderThickness="0"
                      Background="Transparent"
                      BorderBrush="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="2"
                                Padding="6"
                                Background="White"
                                CornerRadius="3"
                                BorderBrush="#FFDDDDDD"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="SemiBold"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding Unit}"
                                               Foreground="Gray"
                                               FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Select All"
                    Width="90"
                    Margin="0,0,6,0"
                    Click="SelectAll_Click"/>
            <Button Content="Deselect All"
                    Width="90"
                    Margin="0,0,6,0"
                    Click="DeselectAll_Click"/>
            <Button Content="Cancel"
                    Width="90"
                    Margin="0,0,6,0"
                    Click="CancelButton_Click"/>
            <Button Content="OK"
                    Width="90"
                    IsDefault="True"
                    IsEnabled="{Binding HasSelection}"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="MGK_Analyzer.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Performance Log Viewer" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0">
            <Button Content="Clear" Click="Clear_Click" ToolTip="Clear Logs"/>
            <Separator/>
            <CheckBox x:Name="AutoScrollCheckBox" Content="Auto Scroll" IsChecked="True" 
                      ToolTip="Auto scroll when new logs are added"/>
            <Separator/>
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox x:Name="FilterComboBox" Width="100" SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Performance"/>
                <ComboBoxItem Content="Info"/>
                <ComboBoxItem Content="Warning"/>
                <ComboBoxItem Content="Error"/>
            </ComboBox>
        </ToolBar>
        
        <!-- Log List -->
        <ScrollViewer Grid.Row="1" x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="LogListBox" 
                     ItemsSource="{Binding LogEntries}"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas, Courier New">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayText}" 
                                   Foreground="{Binding TextColor}"
                                   FontSize="11"
                                   Margin="2,1"
                                   TextWrapping="NoWrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="StatusText" Text="Ready"/>
        </StatusBar>
    </Grid>
</Window>
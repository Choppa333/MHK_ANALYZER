<Window x:Class="MGK_Analyzer.Views.ThemeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="Theme Settings" Height="450" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Application Theme Settings" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Description -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Select your preferred theme. Click on a theme to preview it instantly." 
                       FontSize="12" Foreground="Gray"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Use 'Apply' to save your selection or 'Cancel' to revert changes." 
                       FontSize="12" Foreground="DarkBlue"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Theme Selection Area -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ThemeListPanel" Margin="0,0,0,20">
                <!-- Theme items will be dynamically added here -->
            </StackPanel>
        </ScrollViewer>

        <!-- Button Area -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="ApplyButton" Content="Apply &amp; Save" 
                    Width="100" Height="30" Margin="0,0,10,0"
                    Background="DodgerBlue" Foreground="White"
                    FontWeight="Bold"
                    Click="ApplyButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Width="80" Height="30" Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" 
                    Width="80" Height="30"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
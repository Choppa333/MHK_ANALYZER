<Window x:Class="MGK_Analyzer.Windows.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="{Binding WindowTitle, RelativeSource={RelativeSource Self}}" 
        MinWidth="960" MinHeight="600"
        Width="1200" Height="800"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        FontFamily="Malgun Gothic">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Syncfusion Chart -->
        <syncfusion:SfChart Grid.Column="0" x:Name="ChartControl" 
                           Margin="10"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch">
            <syncfusion:SfChart.PrimaryAxis>
                <syncfusion:DateTimeAxis Header="Time" 
                                        LabelFormat="HH:mm:ss"
                                        FontFamily="Malgun Gothic"
                                        FontSize="11"/>
            </syncfusion:SfChart.PrimaryAxis>
            <syncfusion:SfChart.SecondaryAxis>
                <syncfusion:NumericalAxis Header="Value"
                                         FontFamily="Malgun Gothic"
                                         FontSize="11"/>
            </syncfusion:SfChart.SecondaryAxis>
            <syncfusion:SfChart.Legend>
                <syncfusion:ChartLegend DockPosition="Right" 
                                       FontFamily="Malgun Gothic"
                                       FontSize="10"/>
            </syncfusion:SfChart.Legend>
        </syncfusion:SfChart>
        
        <!-- Management Panel -->
        <Border Grid.Column="1" Width="280" Background="WhiteSmoke" 
                BorderBrush="LightGray" BorderThickness="1,0,0,0"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch">
                <StackPanel>
                    <!-- Series Management -->
                    <TextBlock Text="Series Management" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding SeriesList, RelativeSource={RelativeSource AncestorType=Window}}"
                                 HorizontalAlignment="Stretch">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                       BorderBrush="#FFDDDDDD" 
                                       BorderThickness="1" 
                                       CornerRadius="3"
                                       Margin="0,2" Padding="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding SeriesData.Name}" 
                                                       FontWeight="SemiBold" FontSize="11"/>
                                            <TextBlock Text="{Binding SeriesData.Unit}" 
                                                       FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Chart Properties -->
                    <Separator Margin="0,15,0,10"/>
                    <TextBlock Text="Chart Properties" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Title:" FontSize="10" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding WindowTitle, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                            Padding="5" Margin="0,0,0,10"/>
                    
                    <!-- Export Button -->
                    <Button Content="Export Chart" Padding="10,5" Margin="0,10,0,0" Click="ExportChart_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>

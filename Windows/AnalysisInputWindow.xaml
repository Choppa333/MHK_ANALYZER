<Window x:Class="MGK_Analyzer.Windows.AnalysisInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:input="clr-namespace:Syncfusion.Windows.Controls.Input;assembly=Syncfusion.SfInput.WPF"
        xmlns:vm="clr-namespace:MGK_Analyzer.ViewModels"
        mc:Ignorable="d"
        Title="Analysis Input"
        Width="920" Height="820"
        WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <vm:AnalysisInputViewModel />
    </Window.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Analysis Input" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Test Data Upload" Margin="0,0,0,12" Padding="12">
                    <StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.Column="0"
                                    Content="Select No-Load CSV"
                                    Command="{Binding BrowseNoLoadCsvCommand}"
                                    Padding="10,6"/>
                            <input:SfTextBoxExt Grid.Row="0" Grid.Column="2"
                                                Text="{Binding NoLoadCsvPath, UpdateSourceTrigger=PropertyChanged}"
                                                IsReadOnly="True" />

                            <Button Grid.Row="2" Grid.Column="0"
                                    Content="Select Load CSV"
                                    Command="{Binding BrowseLoadCsvCommand}"
                                    Padding="10,6"/>
                            <input:SfTextBoxExt Grid.Row="2" Grid.Column="2"
                                                Text="{Binding LoadCsvPath, UpdateSourceTrigger=PropertyChanged}"
                                                IsReadOnly="True" />
                        </Grid>

                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="CSV format" FontWeight="SemiBold" />
                            <TextBlock Text="No-load: V, I, W" />
                            <TextBlock Text="Load: V, I, W, T(Nm), n(rpm)" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Validate CSV" Padding="10,6" Command="{Binding ValidateCsvCommand}" />
                            <TextBlock Text="Checks columns/format of selected files." VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666" />
                        </StackPanel>

                        <Border Margin="0,10,0,0" Padding="8" Background="#10FF0000" CornerRadius="4" Visibility="Collapsed">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasUploadValidationError}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="Select both no-load and load CSV files." Foreground="#C00000" />
                        </Border>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Motor Rated Info" Margin="0,0,0,12" Padding="12">
                    <StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Rated Voltage (V)"/>
                                <TextBox Text="{Binding RatedVoltage, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Rated Current (A)"/>
                                <TextBox Text="{Binding RatedCurrent, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <TextBlock Text="Rated Speed (rpm)"/>
                                <TextBox Text="{Binding RatedSpeedRpm, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="2">
                                <TextBlock Text="Rated Torque (Nm)"/>
                                <TextBox Text="{Binding RatedTorqueNm, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="4" Grid.Column="0">
                                <TextBlock Text="Rated Frequency (Hz)"/>
                                <TextBox Text="{Binding RatedFrequencyHz, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Grid.Row="4" Grid.Column="2">
                                <TextBlock Text="Pole Count"/>
                                <TextBox Text="{Binding PoleCount, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="6" Grid.Column="0">
                                <TextBlock Text="Rated Power (kW)"/>
                                <TextBox Text="{Binding RatedPowerKw, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Grid.Row="6" Grid.Column="2">
                                <TextBlock Text="Winding Material"/>
                                <ComboBox ItemsSource="{Binding WindingMaterials}" SelectedItem="{Binding SelectedWindingMaterial}" />
                            </StackPanel>

                            <StackPanel Grid.Row="8" Grid.Column="0">
                                <TextBlock Text="DC Line-Line Resistance R12 (Ohm)"/>
                                <TextBox Text="{Binding R12, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="8" Grid.Column="2">
                                <TextBlock Text="DC Line-Line Resistance R23 (Ohm)"/>
                                <TextBox Text="{Binding R23, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="10" Grid.Column="0">
                                <TextBlock Text="DC Line-Line Resistance R31 (Ohm)"/>
                                <TextBox Text="{Binding R31, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Temperature/Resistance Correction" Margin="0,0,0,12" Padding="12">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Conductor Temp Coeff K_cond (Cu=235)" />
                                <TextBox Text="{Binding ConductorTempCoeff, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Reference Temp (theta_ref C)" />
                                <TextBox Text="{Binding ReferenceTemp, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <TextBlock Text="Resistance Measure Temp (theta0 C)" />
                                <TextBox Text="{Binding ResistanceMeasureTemp, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="2">
                                <TextBlock Text="Rated Load Winding Temp (theta_w C)" />
                                <TextBox Text="{Binding WindingRatedTemp, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="4" Grid.Column="0">
                                <TextBlock Text="Ambient/Coolant Temp (theta_c C)" />
                                <TextBox Text="{Binding CoolantTemp, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Test Metadata" Padding="12">
                    <StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Test Date"/>
                                <input:SfDatePicker Value="{Binding TestDate}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Tester"/>
                                <input:SfTextBoxExt Text="{Binding TesterName, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Memo" Margin="0,10,0,4"/>
                        <RichTextBox Height="120" />

                        <Expander Header="Additional Fields" Margin="0,10,0,0">
                            <StackPanel Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Temperature (C)"/>
                                            <TextBox Text="{Binding TemperatureC, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Humidity (%)"/>
                                            <TextBox Text="{Binding HumidityPercent, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="Remarks" Margin="0,10,0,4"/>
                                    <input:SfTextBoxExt Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <TextBlock VerticalAlignment="Center" Foreground="#666" Text="Save logic will be added later." />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="Run Sample Analysis" Margin="0,0,8,0" Padding="12,6" Click="RunSampleAnalysis_Click" />
                <Button Content="Save" Margin="0,0,8,0" Padding="12,6"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding CanSave}" />
                <Button Content="Close" Padding="12,6" IsCancel="True" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
